<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent"
    tools:context="app.pharma.com.pharma.activity.Login.Login">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/top">
        <include
            layout="@layout/toolbar_back"></include>
    </RelativeLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_below="@id/top"
        android:scrollbars="none"
        android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:orientation="vertical">
        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginBottom="20dp"
            android:src="@drawable/logo"/>
        <android.support.v7.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            app:cardElevation="@dimen/elevation"
            app:cardCornerRadius="@dimen/radius_edt"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginLeft="15dp"
                android:src="@drawable/profile"/>
            <EditText
                android:id="@+id/ed_user"
                android:layout_width="match_parent"
                android:drawablePadding="10dp"
                android:layout_marginLeft="5dp"
                android:layout_height="40dp"
                android:background="@android:color/transparent"
                android:hint="@string/user_name"
                android:maxWidth="300dp"

                android:minWidth="300dp"

                android:padding="5dp"


                android:textColorHint="@color/blue"
                android:textSize="12sp" />
            </LinearLayout>
        </android.support.v7.widget.CardView>
        <View
            android:layout_width="match_parent"
            android:layout_height="20dp"/>
        <android.support.v7.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            app:cardElevation="@dimen/elevation"
            app:cardCornerRadius="@dimen/radius_edt"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginLeft="15dp"
                android:src="@drawable/email"/>
            <EditText
                android:id="@+id/ed_email"
                android:layout_width="match_parent"
                android:drawablePadding="10dp"
                android:layout_marginLeft="5dp"
                android:layout_height="40dp"

                android:background="@android:color/transparent"
                android:hint="@string/email"
                android:maxWidth="300dp"

                android:minWidth="300dp"

                android:padding="5dp"


                android:textColorHint="@color/blue"
                android:textSize="12sp" />
            </LinearLayout>
        </android.support.v7.widget.CardView>
        <View
            android:layout_width="match_parent"
            android:layout_height="20dp"/>
        <android.support.v7.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            app:cardElevation="@dimen/elevation"
            app:cardCornerRadius="@dimen/radius_edt"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginLeft="15dp"
                android:src="@drawable/padlock"/>
            <EditText
                android:id="@+id/ed_pass"
                android:layout_width="match_parent"
                android:drawablePadding="10dp"
                android:layout_marginLeft="5dp"
                android:layout_height="40dp"
                android:inputType="textPassword"
                android:background="@android:color/transparent"
                android:hint="@string/pass"
                android:maxWidth="300dp"

                android:minWidth="300dp"

                android:padding="5dp"


                android:textColorHint="@color/blue"
                android:textSize="12sp" />
            </LinearLayout>
        </android.support.v7.widget.CardView>
        <View
            android:layout_width="match_parent"
            android:layout_height="20dp"/>
        <android.support.v7.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            app:cardElevation="@dimen/elevation"
            app:cardCornerRadius="@dimen/radius_edt"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginLeft="15dp"
                android:src="@drawable/padlock"/>
            <EditText
                android:id="@+id/ed_repass"
                android:layout_width="match_parent"
                android:drawablePadding="10dp"
                android:layout_marginLeft="5dp"
                android:layout_height="40dp"
                android:inputType="textPassword"
                android:background="@android:color/transparent"
                android:hint="@string/re_pas"
                android:maxWidth="300dp"

                android:minWidth="300dp"

                android:padding="5dp"


                android:textColorHint="@color/blue"
                android:textSize="12sp" />
            </LinearLayout>
        </android.support.v7.widget.CardView>
        <View
            android:layout_width="match_parent"
            android:layout_height="20dp"/>
        <android.support.v7.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            app:cardElevation="@dimen/elevation"
            app:cardCornerRadius="@dimen/radius_edt"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginLeft="15dp"
                android:src="@drawable/calendar"/>
            <EditText
                android:id="@+id/ed_birth"
                android:layout_width="match_parent"
                android:drawablePadding="10dp"
                android:layout_marginLeft="5dp"
                android:layout_height="40dp"
                android:focusable="false"
                android:background="@android:color/transparent"
                android:hint="@string/birth"
                android:maxWidth="300dp"

                android:minWidth="300dp"

                android:padding="5dp"


                android:textColorHint="@color/blue"
                android:textSize="12sp" />
            </LinearLayout>
        </android.support.v7.widget.CardView>
        <LinearLayout
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:maxWidth="100dp"
            android:paddingLeft="10dp"
            android:layout_marginTop="10dp"

            android:paddingRight="10dp"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:orientation="horizontal"
                android:layout_weight="1">
                <CheckBox
                    android:layout_width="wrap_content"
                    android:id="@+id/cb_acceep"
                    android:background="@drawable/select_checkbox"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textColor="@color/blue"
                    android:gravity="center_vertical"
                    android:text="@string/agree"/>

            </LinearLayout>


        </LinearLayout>
        <Button
            android:layout_width="350dp"
            android:layout_height="35dp"
            android:textColor="@color/white"
            android:text="@string/register2"
            android:id="@+id/btn_register"
            android:elevation="10dp"
            android:padding="5dp"
            android:maxWidth="300dp"
            android:background="@drawable/border_edt_pink"
            android:layout_marginTop="20dp"
            android:gravity="center"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="20dp"
            android:textColor="@color/blue"
            android:text="@string/have_acc"/>


    </LinearLayout>
    </ScrollView>
</RelativeLayout>

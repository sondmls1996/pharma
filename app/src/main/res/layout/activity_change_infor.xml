<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent"
    tools:context="app.pharma.com.pharma.activity.Detail.Infor_Dr">


    <ScrollView

        android:layout_width="match_parent"

        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                >
                <include
                    layout="@layout/header_layout"
                    ></include>
            </RelativeLayout>
            <LinearLayout
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:id="@+id/ln_dr_inf">
                <View
                    android:layout_width="match_parent"
                    android:layout_height="40dp"/>
                <android.support.v7.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    app:cardElevation="@dimen/elevation"
                    app:cardCornerRadius="@dimen/radius_edt"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginLeft="15dp"
                        android:src="@drawable/profile"/>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:drawablePadding="10dp"
                    android:layout_marginLeft="5dp"
                    android:id="@+id/ed_fullname"
                    android:textSize="12sp"
                    android:background="@android:color/transparent"
                    android:maxWidth="300dp"
                    android:minWidth="300dp"
                    android:hint="@string/full_name"
                    android:textColorHint="@color/blue"
                    android:padding="5dp"/>
                    </LinearLayout>
                </android.support.v7.widget.CardView>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="20dp"/>
                <android.support.v7.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    app:cardElevation="@dimen/elevation"
                    app:cardCornerRadius="@dimen/radius_edt"
                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginLeft="15dp"
                        android:src="@drawable/email"/>
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:drawablePadding="10dp"
                        android:layout_marginLeft="5dp"
                        android:textSize="12sp"
                        android:id="@+id/ed_email"
                        android:background="@android:color/transparent"
                        android:maxWidth="300dp"
                        android:minWidth="300dp"

                        android:hint="@string/email"

                        android:textColorHint="@color/blue"


                        android:padding="5dp"/>
                    </LinearLayout>
                </android.support.v7.widget.CardView>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="20dp"/>
                <android.support.v7.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    app:cardElevation="@dimen/elevation"
                    app:cardCornerRadius="@dimen/radius_edt"
                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginLeft="15dp"
                        android:src="@drawable/calendar"/>
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:drawablePadding="10dp"
                        android:layout_marginLeft="5dp"
                        android:textSize="12sp"
                        android:background="@android:color/transparent"
                        android:maxWidth="300dp"
                        android:minWidth="300dp"
                        android:id="@+id/ed_birth"

                        android:hint="@string/birth"

                        android:textColorHint="@color/blue"


                        android:padding="5dp"/>
                    </LinearLayout>
                </android.support.v7.widget.CardView>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="20dp"/>
                <android.support.v7.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    app:cardElevation="@dimen/elevation"
                    app:cardCornerRadius="@dimen/radius_edt"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginLeft="15dp"
                        android:src="@drawable/blue_place"/>
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:drawablePadding="10dp"
                        android:layout_marginLeft="5dp"
                        android:textSize="12sp"
                        android:background="@android:color/transparent"
                        android:maxWidth="300dp"
                        android:minWidth="300dp"
                        android:id="@+id/ed_adr"
                        android:hint="@string/adr"

                        android:textColorHint="@color/blue"


                        android:padding="5dp"/>
                    </LinearLayout>
                </android.support.v7.widget.CardView>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="20dp"/>
                <android.support.v7.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    app:cardElevation="@dimen/elevation"
                    app:cardCornerRadius="@dimen/radius_edt"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginLeft="15dp"
                        android:src="@drawable/phone_blue"/>
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:drawablePadding="10dp"
                        android:layout_marginLeft="5dp"
                        android:textSize="12sp"
                        android:background="@android:color/transparent"
                        android:maxWidth="300dp"
                        android:minWidth="300dp"
                        android:id="@+id/ed_phone"
                        android:hint="@string/phone"
                        android:inputType="number"
                        android:textColorHint="@color/blue"


                        android:padding="5dp"/>
                    </LinearLayout>
                </android.support.v7.widget.CardView>



                <Button
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:textColor="@color/white"
                    android:text="@string/update_inf"
                    android:elevation="10dp"
                    android:id="@+id/btn_update"
                    android:background="@drawable/rip_button_green"
                    android:layout_marginTop="20dp"
                    android:gravity="center"/>
                <View
                android:layout_width="match_parent"
                android:layout_height="20dp"/>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_alignParentTop="true"
        android:layout_height="wrap_content">
        <include
            layout="@layout/toolbar_transparent"
            ></include>

    </RelativeLayout>
</RelativeLayout>

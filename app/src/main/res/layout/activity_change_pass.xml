<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent"
    tools:context="app.pharma.com.pharma.activity.Detail.Infor_Dr">
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_height="match_parent"
        tools:context="app.pharma.com.pharma.activity.Detail.Infor_Dr">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                >

                <include
                    layout="@layout/header_layout"
                    ></include>
            </RelativeLayout>
            <LinearLayout
                android:layout_width="300dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:id="@+id/ln_dr_inf">

                <android.support.v7.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    app:cardElevation="@dimen/elevation"
                    app:cardCornerRadius="@dimen/radius_edt"
                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">
                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_marginLeft="15dp"
                            android:src="@drawable/padlock"/>
                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:drawablePadding="10dp"
                            android:layout_marginLeft="5dp"
                            android:textSize="12sp"
                            android:inputType="textPassword"
                            android:gravity="center_vertical"
                            android:id="@+id/ed_oldpass"
                            android:background="@android:color/transparent"
                            android:maxWidth="300dp"
                            android:minWidth="300dp"

                            android:hint="@string/old_pass"

                            android:textColorHint="@color/blue"


                            android:padding="5dp"/>
                    </LinearLayout>
                </android.support.v7.widget.CardView>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="20dp"/>
                <android.support.v7.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    app:cardElevation="@dimen/elevation"
                    app:cardCornerRadius="@dimen/radius_edt"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">
                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_marginLeft="15dp"
                            android:src="@drawable/padlock"/>
                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:drawablePadding="10dp"
                            android:layout_marginLeft="5dp"
                            android:inputType="textPassword"
                            android:textSize="12sp"
                            android:gravity="center_vertical"
                            android:id="@+id/ed_newpass"
                            android:background="@android:color/transparent"
                            android:maxWidth="300dp"
                            android:minWidth="300dp"

                            android:hint="@string/new_pass"

                            android:textColorHint="@color/blue"


                            android:padding="5dp"/>
                    </LinearLayout>
                </android.support.v7.widget.CardView>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="20dp"/>
                <android.support.v7.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    app:cardElevation="@dimen/elevation"
                    app:cardCornerRadius="@dimen/radius_edt"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">
                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_marginLeft="15dp"
                            android:src="@drawable/padlock"/>
                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:drawablePadding="10dp"
                            android:layout_marginLeft="5dp"
                            android:id="@+id/ed_renewpass"
                            android:inputType="textPassword"
                            android:textSize="12sp"
                            android:gravity="center_vertical"
                            android:background="@android:color/transparent"
                            android:maxWidth="300dp"
                            android:minWidth="300dp"

                            android:hint="@string/re_new_pass"

                            android:textColorHint="@color/blue"


                            android:padding="5dp"/>
                    </LinearLayout>
                </android.support.v7.widget.CardView>



                <Button
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:textColor="@color/white"
                    android:text="@string/update_pass"
                    android:elevation="10dp"
                    android:id="@+id/btn_accep"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/border_edt_green"
                    android:layout_marginTop="20dp"
                    android:gravity="center"/>

            </LinearLayout>
        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"

            android:layout_height="wrap_content">
            <include
                layout="@layout/toolbar_transparent"
                ></include>

        </RelativeLayout>
    </RelativeLayout>

</ScrollView>


